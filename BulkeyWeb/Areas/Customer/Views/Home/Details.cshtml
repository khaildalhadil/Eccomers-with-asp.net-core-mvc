@using System.Text.RegularExpressions
@model ShoppingCart

<style>
	.img-style {
		height: 250px !important;
		width: 350px !important;
		object-fit: cover
	}
</style>

<form method="post">
	<div class="card shadow border-0 mt-4">

		<div class="card-header bg-secondary bg-gradient text-light py-4">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-white text-uppercase">@Model.Product.Title</h3>
				</div>
			</div>
		</div>

		<div class="card-body d-flex">
			<div class="row d-flex ">
				<div class="pb-1">
					<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
						<small>Back to home</small>
					</a>
				</div>
				<div class="text-center mb-3">
					<img src="@Model.Product.ImageUrl" class="rounded img-style" />
				</div>

			</div>
			<div class="row">

				<div class="col-2 offset-lg-1">

					<div class="col-2 pb-4">
						<span class="badge">@Model.Product.Category.Name</span>
					</div>
				</div>

				<div class="row text-center ps-2">
					<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
						<div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
					</div>
					<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
						<div class="text-dark text-opacity-50 fw-semibold">1-50</div>
					</div>
					<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
						<div class="text-dark text-opacity-50 fw-semibold"></div>
					</div>
					<div class="p-1 col-3 col-lg-2 bg-white border-bottom">
						<div class="text-dark text-opacity-50 fw-semibold"></div>
					</div>
				</div>

				<div class="row text-center ps-2">
					<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
						<div>Price</div>
					</div>
					<div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
						<div>@Model.Product.Price</div>
					</div>
				</div>

				<div class="row pl-2 my-3">
					<p class="text-secondary lh-sm">
						@Html.Raw(Model.Product.Description)
					</p>
				</div>

				<div class="row pl-2 mb-3 w-100">
					<div class="col-md-4">
						<div class="input-group mb-3">
							<span class="input-group-text bg-primary text-white border-0 fw-semibold"
								  id="inputGroup-sizing-default">
								Count
							</span>
							<input asp-for="@Model.Count" type="number" value="1" class="form-control text-end"
								   aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-12 col-md-6 pb-1">
						<button type="submit"
								class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
							Add to Cart
						</button>
					</div>
				</div>
			</div>
		</div>

	</div>
</form>

