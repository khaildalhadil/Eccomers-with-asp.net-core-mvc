@model BulkeyBook.Model.Category


<form method="post">
	<div class="border p-3 mt-4">

		<div class="row pb-2">
			<h2 class="text-primary">Update Category @Model.Name</h2>
			<hr />
		</div>

		<div class="mb-3">
			<label asp-for="Name" class="my-2"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="row ">
			<div class="col-6">
				<button type="submit" class="btn btn-primary  w-100">Update</button>
			</div>
			<div class="col-6">
				<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn border text-opacity-75 text-black w-100">Back To List</a>
			</div>
		</div>

	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}