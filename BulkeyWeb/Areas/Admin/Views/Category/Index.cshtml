@model List<BulkeyBook.Model.Category>


<div class="container my-5 box-shadow pb-5 rounded">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 rounded-top">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">All Category</h2>
            </div>
        </div>
    </div>

     <div class="col-6 text-end my-3 w-100 ml-5">
       <a asp-controller="Category" asp-action="Create" class="btn btn-outline-secondary"><i class="bi bi-plus-lg"></i>Create New Category </a> 
    </div> 


    <table class="table table-bordered">
        
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id" class="btn py-2 bg-primary px-3 w-100 text-white">
                            <i class="bi bi-pencil"></i>
                            EDIT
                        </a>
                    </td>

                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn py-2 bg-danger px-3 w-100 text-white">
                            <i class="bi bi-trash"> </i>
                            DELETE
                        </a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
